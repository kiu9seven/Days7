@model Person
@{
    ViewData["Title"] = "Detail Member";
    var index = (int)ViewBag.PersonIndex;
    Layout = "_CustomLayout";
}

<div class="row">
    <div class="col-6 offset-3">
        <h1>@ViewData["Title"]</h1>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <lable class="form-control">@Model?.FullName</lable>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <lable class="form-control">@Model?.FullName</lable>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <lable class="form-control">@Model?.Gender</lable>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <lable class="form-control">@Model?.DateOfBirth.ToString("dd/MM/yyyy")</lable>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <lable class="form-control">@Model?.PhoneNumber&nbsp;</lable>
        </div>
        <div class="form-group">
            <label asp-for="BirthPlace"></label>
            <lable class="form-control">@Model?.BirthPlace</lable>
        </div>
        <div class="form-group">
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Do you want to delete this item?
                        </div>
                        <div class="modal-footer">
                            <form asp-controller="Rookies" asp-action="DeleteWithResult" asp-route-index="@index" method="post">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Confirm </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <a class="btn btn-secondary" asp-controller="Rookies" asp-action="">Back</a>
            <button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Delete</button>

        </div>
    </div>
